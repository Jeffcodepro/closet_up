<div class="fixed-top">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand logo" href="/">
          <%= image_tag "closetup_logo.png", alt: "ClosetUp Logo", height: 90 %>
      </a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">

        <div class="mx-auto" style="max-width: 500px; width: 100%;">
          <form class="d-flex" role="search">
            <input class="form-control me-2 mt-2" type="search" placeholder="Buscar produtos" aria-label="Search">
            <button class="btn btn-outline-success mt-2" type="submit">
              <i class="bi bi-search"></i>
            </button>
          </form>
        </div>

        <ul class="navbar-nav">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to edit_user_registration_path, class: "nav-link text-white" do %>
                <i class="bi bi-person fs-4"></i>
            <% end %>

            <li class="nav-item mt-2">
              <span class="nav-link text-white">Olá, <%= current_user.email %></span>
            </li>
            <li class="nav-item mt-2">
              <%= link_to "Adicionar Produto", new_product_path, class: "nav-link btn-add-product" %>
            </li>
            </li>
            <li class="nav-item mt-2">
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "nav-link text-white" %>
            </li>
          <% else %>
            <li class="nav-item mt-2">
              <%= link_to "Entrar", new_user_session_path, class: "nav-link text-white" %>
            </li>
            <li class="nav-item">
              <%= link_to "Criar Conta", new_user_registration_path, class: "nav-link text-white" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</div>

<nav class="navbar navbar-dark bg-secondary">
  <div class="container-fluid">
    <ul class="navbar-nav d-flex flex-row w-100 justify-content-between overflow-auto">
      <% Category.all.each do |category| %>
        <li class="container nav-item text-center">
          <%= link_to products_by_category_path(category), class: "nav-link text-white px-2" do %>
            <%= category.title %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</nav>


<div class="container py-4">
  <div class="row">
    <div class="col">
      <h1>Meus Pedidos</h1>

      <% if @orders.empty? %>
        <p>Você ainda não fez nenhum pedido.</p>
        <%= link_to 'Compre Agora', products_path, class: 'btn btn-primary' %>
      <% else %>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>ID do Pedido</th>
              <th>Produto</th>
              <th>Tamanho</th>
              <th>Valor</th>
              <th>Status</th>
              <th>Data do Pedido</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td>#<%= order.id %></td>
                <td><%= order.product.title %></td>
                <td><%= order.size %></td>
                <td><%= humanized_money_with_symbol order.amount %></td>
                <td><%= order.state %></td>
                <td><%= order.created_at.strftime("%d/%m/%Y") %></td>
                <td><%= link_to 'Ver Detalhes', order_path(order), class: 'btn-order-info' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>

      <%= link_to 'Retornar para produtos', products_path, class: 'btn btn-secondary mt-3' %>
    </div>
  </div>
</div>
