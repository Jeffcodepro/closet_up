
<div class="container mt-5">
  <div class="row">
    <div class="col">
      <h1>Meus Pedidos</h1>

      <% if @orders.empty? %>
        <p>Você ainda não fez nenhum pedido.</p>
        <%= link_to 'Compre Agora', products_path, class: 'btn btn-primary' %>
      <% else %>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>ID do Pedido</th>
              <th>Produto</th>
              <th>Tamanho</th>
              <th>Valor</th>
              <th>Status</th>
              <th>Data do Pedido</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <% items = order.order_items %>
              <% first = items.first %>
              <% extra = [items.size - 1, 0].max %>

              <tr>
                <td>#<%= order.id %></td>

                <td>
                  <%= first&.product&.title || "—" %>
                  <% if extra > 0 %>
                    <small class="text-muted">+ <%= extra %> outros</small>
                  <% end %>
                </td>

                <td>
                  <%= items.map(&:size).compact_blank.uniq.join(", ").presence || "-" %>
                </td>

                <td>
                  <%= number_to_currency(order.amount_cents / 100.0, unit: "R$ ", separator: ",", delimiter: ".") %>
                </td>

                <td><%= order.state %></td>
                <td><%= l(order.created_at.to_date) %></td>
                <td><%= link_to 'Ver Detalhes', order_path(order), class: 'btn-order-info' %></td>
              </tr>
            <% end %>
          </tbody>

        </table>
      <% end %>

      <%= link_to 'Retornar para produtos', products_path, class: 'btn btn-secondary mt-3' %>
    </div>
  </div>
</div>
