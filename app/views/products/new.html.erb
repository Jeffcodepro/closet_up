
<div class="container">
  <h1 class="add-new-product">Adicione um novo produto</h1>

  <%= simple_form_for @product do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :sku %>
    <%= f.input :price %>
    <%= f.input :category_id, collection: @categories, prompt: "Selecione uma categoria" %>
    <%= f.input :size,
                as: :check_boxes,
                collection: Product::SIZES,
                label: "Tamanhos disponÃ­veis" %>
    <%= f.input :images, as: :file, input_html: { multiple: true, direct_upload: true, accept: "image/*" }, label: "Imagens do Produto" %>

    <%= f.button :submit, "Criar Produto", class: "btn-create-product" %>
  <% end %>
</div>
